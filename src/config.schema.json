{
  "$id": "https://groovox.github.io/config/config.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GroovoxConfig",
  "description": "Environment variables configuration for Groovox",
  "type": "object",
  "properties": {
    "storage": {
      "oneOf": [
        {
          "$ref": "#/definitions/S3Storage"
        }
      ]
    }
  },
  "required": ["storage"],
  "additionalProperties": false,
  "definitions": {
    "S3Storage": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "S3"
        },
        "s3": {
          "$ref": "#/definitions/S3"
        }
      },
      "required": ["type", "s3"],
      "additionalProperties": false
    },
    "S3": {
      "type": "object",
      "properties": {
        "bucket": {
          "type": "string"
        },
        "endPoint": {
          "type": "string"
        },
        "accessKey": {
          "type": "string"
        },
        "secretKey": {
          "type": "string"
        },
        "useSsl": {
          "type": "boolean"
        },
        "port": {
          "type": "integer"
        },
        "region": {
          "type": "string"
        },
        "pathStyle": {
          "type": "boolean"
        }
      },
      "required": ["bucket", "endPoint", "accessKey", "secretKey"]
    }
  }
}
